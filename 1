from random import choice
x = choice(names)

if x == names[0]:
    print(f"{names[0]} will pay for the bill today!")
elif x == names[1]:
    print(f"{names[1]} will pay for the bill today!")
elif x == names[2]:
    print(f"{names[2]} will pay for the bill today!")
elif x == names[3]:
    print(f"{names[3]} will pay for the bill today!")
elif x == names[4]:
    print(f"{names[4]} will pay for the bill today!")
else:
    print("error!")
    
    

    
